<div class="jumbotron">
  <h1>Welcome to Tweeter!</h1>
</div>

<div class="container">
  <div class="container">
    <%= render "new" %>
  </div>

  <br><br>

  <div class="container">
    <% @posts.each do |post| %>
    <div class="card container mx-auto p-4 my-3">
      <p>
        <%= post.content %>
      </p>
      <small>Tweeted at: <%= post.created_at %></small>

      <%= render partial: "tags/new", locals: {post: post} %>
      <% post.tags.all.each do |tag| %>
        #<%= tag.name %>
      <% end %>
      <%= link_to 'Delete Tweet', post_path(post), method: :delete %>
    </div>
    <% end %>
  </div>


</div>
