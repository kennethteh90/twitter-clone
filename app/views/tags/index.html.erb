<br><br>

<div class="container">
  <h1><small>Posts by</small> Hashtag </h1>
  <% @tags.each do |tag| %>
    <%= link_to tag_path(tag) do %>
      <div class="card container mx-auto p-4 my-3 my-card">
        <p>
          <b>#<%= tag.name %></b>
        </p>
        <p>
          Number of tweets: <%= tag.posts.count %>
        </p>

      </div>
    <% end %>
  <% end %>
</div>
