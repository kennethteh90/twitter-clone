<div class="jumbotron my-header">
  <h1><small>Posts by</small> Hashtag </h1>
</div>

<div class="container">
  <% @tags.each do |tag| %>
    <%= link_to tag_path(tag) do %>
      <div class="card container mx-auto p-4 my-3 my-card">
        <p>
          <b><%= tag.name %></b>
        </p>
        <p>
          <%= tag.posts.count %> tweets
        </p>

      </div>
    <% end %>
  <% end %>
</div>
